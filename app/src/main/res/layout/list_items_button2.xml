        android:text="TextView"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="TextView"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="TextView"
        android:textSize="15sp"
        android:visibility="gone" />

</LinearLayout>