        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="TextView"
        android:textSize="15sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView1"
